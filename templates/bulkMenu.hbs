{{!-- Render Data --}}
{{#*inline "insertTab"}}
  <fieldset class="bulk-display">
    <ul class="bm-ul">
      {{#each this.folders}}
      <li class="bm-li">
        <span class="bm-folder">
          <input 
            type="checkbox" 
            class="bm-check"
            id="{{this.id}}"
            data-id="{{this.id}}"
            data-type="{{this.type}}"
            data-name="{{this.name}}"
          >
          <label for="{{this.id}}">
            <button type="button" class="bm-collapsable">
              {{this.name}}
            </button>
          </label>
        </span>

        <div class="bm-content">
          {{#each this.content}}
          {{#with this}}
            <span class="bm-entity">
              <input 
                type="checkbox" 
                class="bm-check"
                id="{{this.id}}"
                data-id="{{this.id}}"
                data-type="{{../type}}"
                data-name="{{this.name}}"
              >
              <label for="{{this.id}}"> 
                {{this.name}}
              </label>

              <br />
            </span>
          {{/with}}
          {{/each}}
        </div>
      </li>
      {{/each}}

      <li class="bm-li">
        <div class="bm-content">
          {{#each this.orphans}}
          {{#with this}}
            <span class="bm-entity">
              <input 
                type="checkbox" 
                class="bm-check"
                name="{{this.id}}" 
                id="{{this.id}}"
                data-id="{{this.id}}"
                data-name="{{this.name}}"
              >
              <label for="{{this.id}}"> 
                {{this.name}}
              </label>

              <br />
            </span>
          {{/with}}  
          {{/each}}
        </div> 
      </li> <!-- End of orphans-->

    </ul>
  </fieldset>
{{/inline}}


{{!-- Search --}}
{{#*inline "insertSearch"}}
  <div class="bm-search-wrapper">
    <div class="bm-search-area">
      <i class="fas fa-search bm-search-fa"></i>
      <input name="search" type="text" placeholder="Type to Search...">
    </div>
    <hr >
  </div>
{{/inline}}


{{!-- Add Select All and Deselect All --}}
{{#*inline "insertSelector"}}
  <div class="bm-selector-area">
    <button class="bm-selector-sa" type="button">
      Select All
    </button>
    <button class="bm-selector-dsa" type="reset">
      De-Select All 
    </button>
  </div>
{{/inline}}


{{!-- Main Content --}}
<form class="flexcol" autocomplete="off">
  <nav class="sheet-tabs tabs">
    <a class="item active" data-tab="actors"><i class="fas fa-users"></i> Actors</a>
    <a class="item" data-tab="journal"><i class="fas fa-book"></i> Journals</a>
    <a class="item" data-tab="items"><i class="fas fa-shield-alt"></i> Items</a>
    <a class="item" data-tab="macros"><i class="fas fa-code"></i> Macros</a>
    <a class="item" data-tab="scenes"><i class="fas fa-map"></i> Scenes</a>
    <a class="item" data-tab="tables"><i class="fas fa-table"></i> RollTables</a>
    <a class="item" data-tab="playlists"><i class="fas fa-music"></i> Playlists</a> 
  </nav>

  {{!-- Add Search --}}
  {{> insertSearch}}

  <section class="bm-data"> 
    <section class="tab" data-tab="actors">
      {{> insertSelector}}
      {{#with this.actors}}
        {{> insertTab}}
      {{/with}}
    </section>
    
    <section class="tab" data-tab="journal">
      {{#with this.journals}}
        {{> insertTab}}
      {{/with}}
    </section>

    <section class="tab" data-tab="items">
      {{#with this.items}}
        {{> insertTab}}
      {{/with}}
    </section>

    <section class="tab" data-tab="macros">
      {{#with this.macros}}
        {{> insertTab}}
      {{/with}}
    </section>

    <section class="tab" data-tab="scenes">
      {{#with this.scenes}}
        {{> insertTab}}
      {{/with}}
    </section>

    <section class="tab" data-tab="tables">
      {{#with this.tables}}
        {{> insertTab}}
      {{/with}}
    </section>

    <section class="tab" data-tab="playlists">
      {{#with this.playlists}}
        {{> insertTab}}
      {{/with}}
    </section>
  </section>

  {{!-- Footer and Buttons --}}
  <footer class="bulk-footer">
    {{!-- Move Button --}}
    <button type="button" id="bm-move">
      <i class="fas fa-truck-moving">Move</i>
    </button>

    {{!-- Delete Button --}}
    <button type="button" id="bm-delete">
      <i class="fas fa-trash">Delete</i>
    </button>

    {{!-- Cancel Button --}}
    <button type="reset" id="bm-cancel">
      <i class="fas fa-times">Cancel</i>
    </button>

  </footer>

</form>